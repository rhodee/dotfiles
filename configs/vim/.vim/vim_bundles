" ----------------------------------------------------------------------------
" Load Plugins
" ----------------------------------------------------------------------------
packadd minpac

if !exists('*minpac#init')
  " minpac is not available.

  " Settings for plugin-less environment.
  " ...
else
  " minpac is available.
  " init with verbosity 3 to see minpac work
  call minpac#init({'verbose': 3})
  call minpac#add('k-takata/minpac', {'type': 'opt'})

  " Additional plugins here.
  call minpac#add('HerringtonDarkholme/yats.vim')
  call minpac#add('RRethy/vim-illuminate')
  call minpac#add('airblade/vim-gitgutter')
  call minpac#add('airblade/vim-rooter')
  call minpac#add('dense-analysis/ale')
  call minpac#add('jiangmiao/auto-pairs')
  call minpac#add('jlanzarotta/bufexplorer')
  call minpac#add('jremmen/vim-ripgrep')
  call minpac#add('junegunn/fzf', { 'do': { -> fzf#install() } })
  call minpac#add('junegunn/fzf.vim')
  call minpac#add('junegunn/vim-easy-align')
  call minpac#add('leafgarland/typescript-vim')
  call minpac#add('machakann/vim-highlightedyank')
  call minpac#add('mbbill/undotree')
  call minpac#add('sjl/gundo.vim')
  call minpac#add('tmux-plugins/vim-tmux-focus-events')
  call minpac#add('tpope/vim-commentary')
  call minpac#add('tpope/vim-repeat')
  call minpac#add('tpope/vim-surround')
  call minpac#add('tpope/vim-vinegar')
  call minpac#add('tpope/vim-fugitive')
  call minpac#add('mhinz/vim-startify')

  " Writing
  call minpac#add('rhysd/vim-grammarous')
  call minpac#add('junegunn/goyo.vim')
  call minpac#add('junegunn/limelight.vim')
  call minpac#add('aklt/plantuml-syntax')
  call minpac#add('scrooloose/vim-slumlord')

  " Search / Snippets
  call minpac#add('preservim/nerdtree')
  call minpac#add('honza/vim-snippets')
  call minpac#add('neoclide/coc.nvim', {'branch': 'release'})
  call minpac#add('francoiscabrol/ranger.vim')
  call minpac#add('rbgrouleff/bclose.vim')

  " Syntactic language support
  call minpac#add('ap/vim-css-color')
  call minpac#add('cespare/vim-toml')
  call minpac#add('chrisbra/colorizer')
  call minpac#add('elzr/vim-json')
  call minpac#add('fatih/vim-go')
  call minpac#add('jelera/vim-javascript-syntax')
  call minpac#add('jparise/vim-graphql')
  call minpac#add('luochen1990/rainbow')
  call minpac#add('mechatroner/rainbow_csv')
  call minpac#add('mxw/vim-jsx')
  call minpac#add('peitalin/vim-jsx-typescript')
  call minpac#add('rust-lang/rust.vim')
  call minpac#add('stephpy/vim-yaml')
  call minpac#add('tpope/vim-markdown')
  call minpac#add('voldikss/vim-floaterm')
  call minpac#add('dart-lang/dart-vim-plugin')
  call minpac#add('natebosch/vim-lsc')
  call minpac#add('natebosch/vim-lsc-dart')

  " Themes
  call minpac#add('arcticicestudio/nord-vim')
  call minpac#add('morhetz/gruvbox')
  call minpac#add('vim-airline/vim-airline')
  call minpac#add('vim-airline/vim-airline-themes')

  " minpac utility commands
  command! PackUpdate call minpac#update()
  command! PackClean call minpac#clean()
  command! PackStatus call minpac#status()

  " Plugin settings here.
endif

syntax enable "required
